<head>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>

<nav class="bg-white w-full shadow-md py-3">
  <div class="max-w-7xl mx-auto flex items-center justify-between px-6">

    <!-- Logo -->
    <div class="flex-shrink-0">
      <img src="/images/logo.png" alt="NGO Logo" class="w-32 h-32 object-contain" />
    </div>

    <!-- Mobile Menu Button -->
    <div class="lg:hidden">
      <button id="menuToggle" class="text-3xl text-gray-700 focus:outline-none">
        <i class="fas fa-bars"></i>
      </button>
    </div>

    <!-- Right Section -->
    <div id="navMenu" class="hidden lg:flex flex-col lg:flex-row lg:items-center space-y-4 lg:space-y-0 lg:space-x-6 mt-6 lg:mt-0 text-center w-full lg:w-auto">
     

      <!-- Navigation Links -->
      <ul class="flex flex-col lg:flex-row justify-center items-center space-y-4 lg:space-y-0 lg:space-x-6 text-gray-700 font-medium">
        <li><a href="/" class="<%= currentPath === '/' ? 'border-b-2 border-green-600 font-semibold' : 'hover:text-green-600' %>">Home</a></li>
        <li><a href="/about" class="<%= currentPath === '/about' ? 'border-b-2 border-green-600 font-semibold' : 'hover:text-green-600' %>">About us</a></li>
        <li><a href="/wedo" class="<%= currentPath === '/wedo' ? 'border-b-2 border-green-600 font-semibold' : 'hover:text-green-600' %>">What We Do</a></li>
        <li><a href="/news" class="<%= currentPath === '/news' ? 'border-b-2 border-green-600 font-semibold' : 'hover:text-green-600' %>">News</a></li>
        <li><a href="/contact" class="<%= currentPath === '/contact' ? 'border-b-2 border-green-600 font-semibold' : 'hover:text-green-600' %>">Contact</a></li>
        <li><a href="/gallery" class="<%= currentPath === '/gallery' ? 'border-b-2 border-green-600 font-semibold' : 'hover:text-green-600' %>">Gallery</a></li>
      </ul>

      <!-- Donate Button -->
      <a href="/donate"
   class="inline-block mt-2 lg:mt-0 px-6 py-2.5 bg-[#02C720] text-white font-semibold rounded-full shadow-md hover:bg-[#029f1a] hover:shadow-[0_4px_20px_rgba(2,199,32,0.5)] hover:scale-105 transition-all duration-300 ease-in-out">
  Donate
</a>

    </div>
  </div>
</nav>

<!-- Mobile Menu Toggle Script -->
<script>
  const toggleBtn = document.getElementById('menuToggle');
  const navMenu = document.getElementById('navMenu');

  toggleBtn.addEventListener('click', () => {
    navMenu.classList.toggle('hidden');
  });
</script>
