<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title><%= story.title %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

</head>
<body class="bg-white text-gray-800 font-sans">

  <section class="max-w-4xl mx-auto px-6 py-16">
    <!-- Back -->
    <a href="/news" class="text-green-600 hover:text-green-800 font-medium text-sm mb-8 inline-block">
      ‚Üê Back to News
    </a>

    <!-- Title -->
    <h1 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-4 leading-tight">
      <%= story.title %>
    </h1>
    <div class="w-20 h-1 bg-green-500 rounded mb-6"></div>

    <!-- Images -->
    <% if (story.images && story.images.length > 0) { %>
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 mb-8">
        <% story.images.forEach(img => { %>
          <img src="<%= img %>" alt="<%= story.title %>" class="w-full h-64 object-cover rounded-lg shadow-md" />
        <% }) %>
      </div>
    <% } %>

    <!-- Content -->
    <article class="prose prose-lg max-w-none text-justify text-gray-700">
      <% story.content.trim().split('\n').forEach(paragraph => { %>
        <p><%= paragraph.trim() %></p>
      <% }); %>
    </article>
  </section>
  <br><br>
  <section>
    <%- include('partials/footer') %>
  </section>

</body>
</html>
